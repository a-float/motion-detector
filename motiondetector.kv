#:kivy 2.0.0
#:import CameraFeed ui.CameraFeed
#:import DetectorSettingsPanel ui.DetectorSettingsPanel
#:import VideoStream imutils.video.VideoStream

<DetectorSettingsPanel>:
    cols: 2

<AppHeader>:
    orientation: 'tb-lr'
    size: self.width, 36
    size_hint: (1, None)
    padding: [10, 5]

    Button:
        text: 'Edit Mask'
        width: 100
        size_hint: (None, 1)
        on_press: root.handle_edit_mask()

    Button:
        text: 'Debug Mode'
        width: 100
        size_hint: (None, 1)
        on_press: root.handle_debug_mode()

<FeedWindow>:
    orientation: 'vertical'
